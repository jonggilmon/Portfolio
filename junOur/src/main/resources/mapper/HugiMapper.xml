<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.HugiMapper">
  <select id="hlist" resultType="HashMap">
    select * from hugi order by no desc
  </select>
  
  <insert id="hugiadd_ok">
    insert into hugi (userid,title,content,writeday)
    values(#{userid},#{title},#{content},now())
  </insert>
</mapper>




