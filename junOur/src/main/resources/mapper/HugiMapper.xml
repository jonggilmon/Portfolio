<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.HugiMapper">
  <select id="hlist" resultType="com.example.demo.vo.HugiVo">
    select * from hugi order by no desc
  </select>
  
  <insert id="hugiadd_ok" parameterType="com.example.demo.vo.HugiVo">
    insert into hugi (userid,title,content,writeday)
    values(#{userid},#{title},#{content},now())
  </insert>
  
  <select id="content" resultType="com.example.demo.vo.HugiVo">
    select * from hugi where no=#{no}
  </select>
  
  <update id="readnum">
    update hugi set readnum=readnum+1 where no=#{no}
  </update>
  
  <delete id="delete">
    delete from hugi where no=#{no}
  </delete>
  
  <select id="hugi_update" resultType="com.example.demo.vo.HugiVo">
    select * from hugi where no=#{no}
  </select>
  
  <update id="hugi_update_ok">
    update hugi set title=#{title}, userid=#{userid}, content=#{content} where no=#{no}
  </update>
</mapper>




